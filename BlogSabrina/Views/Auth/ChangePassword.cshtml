@{
    ViewData["Title"] = "Alterar Palavra Secreta";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-gradient-primary text-white">
                    <h2 class="mb-0">
                        <span class="leaf-decoration"></span>
                        Renovar Palavra Secreta
                        <span class="leaf-decoration"></span>
                    </h2>
                    <p class="mb-0 mt-2">Proteja seu refúgio com nova magia</p>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">
                            <i class="bi bi-exclamation-triangle"></i>
                            @ViewBag.Error
                        </div>
                    }

                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success text-center">
                            <i class="bi bi-check-circle"></i>
                            @ViewBag.Success
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-key"></i> Palavra Atual
                            </label>
                            <input name="currentPassword" type="password" class="form-control" 
                                   placeholder="Palavra secreta atual..." required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-key-fill"></i> Nova Palavra
                            </label>
                            <input name="newPassword" type="password" class="form-control" 
                                   placeholder="Nova palavra mágica..." required minlength="6" />
                            <small class="form-text text-muted">Mínimo 6 caracteres</small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-shield-check"></i> Confirmar Nova Palavra
                            </label>
                            <input name="confirmPassword" type="password" class="form-control" 
                                   placeholder="Repita a nova palavra..." required minlength="6" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-shield-lock"></i>
                                Renovar Proteção
                            </button>
                            <a href="/Admin" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i>
                                Voltar ao Refúgio
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>