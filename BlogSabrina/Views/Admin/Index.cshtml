@model IEnumerable<BlogSabrina.Domain.Entities.BlogPost>
@{
    ViewData["Title"] = "Administração do Blog";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">
            <span class="leaf-decoration"></span>
            Meus Escritos
            <span class="leaf-decoration"></span>
        </h1>
        <a href="/Admin/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Novo Post
        </a>
    </div>

    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="badge bg-@(GetCategoryColor(post.Category))">
                                @GetCategoryName(post.Category)
                            </span>
                            <small class="text-muted">@post.CreatedAt.ToString("dd/MM/yyyy")</small>
                        </div>
                        
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text text-muted">@post.Summary</p>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                @if (!post.IsPublished)
                                {
                                    <span class="badge bg-secondary">Rascunho</span>
                                }
                            </div>
                            <div>
                                <a href="/Admin/Edit/@post.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/Blog/Post/@post.Slug" class="btn btn-outline-success btn-sm" target="_blank">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <form method="post" action="/Admin/Delete/@post.Id" class="d-inline" 
                                      onsubmit="return confirm('Tem certeza que deseja excluir este post?')">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@functions {
    string GetCategoryName(BlogSabrina.Domain.Entities.Category category) => category switch
    {
        BlogSabrina.Domain.Entities.Category.CienciasSociais => "Ciências Sociais",
        BlogSabrina.Domain.Entities.Category.SaudeMental => "Saúde Mental",
        BlogSabrina.Domain.Entities.Category.Carreira => "Carreira",
        _ => category.ToString()
    };

    string GetCategoryColor(BlogSabrina.Domain.Entities.Category category) => category switch
    {
        BlogSabrina.Domain.Entities.Category.CienciasSociais => "primary",
        BlogSabrina.Domain.Entities.Category.SaudeMental => "success",
        BlogSabrina.Domain.Entities.Category.Carreira => "warning",
        _ => "secondary"
    };
}